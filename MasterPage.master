                        <asp:LoginView ID="LoginView3" runat="server">
                            <AnonymousTemplate>

                            <asp:HyperLink ID="HyperLink3" NavigateUrl="~/UserSignUp.aspx" runat="server" ForeColor="Black">| Sign Up</asp:HyperLink>
                            </AnonymousTemplate>
                            <LoggedInTemplate>
