                            </asp:Login>
                        </AnonymousTemplate>
                        <LoggedInTemplate>
                            Signed in as <asp:LoginName ID="LoginName1" runat="server" />! <br /> 
                            <asp:LoginStatus ID="LoginStatus1" runat="server" />
